@model UsuarioModel
@{
    ViewData["Title"] = "Confirmação apagar o Usuario";
}

<div class="text-center">
    <br />
    <h3>Realmente deseja apagar o Usuario(@Model.Nome) </h3>
</div>
<a class="btn btn-primary w-100" asp-controller="Usuario" asp-action="Index" role="button">Cancelar Exclusão</a>
<a class="btn btn-danger w-100" asp-route-id="@Model.Id" asp-controller="Usuario" asp-action="Apagar" >Confirmar Exclusão</a>